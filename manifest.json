{
  "name": "cobalt downloader",
  "description": "allows easy downloads of media via cobalt.",
  "version": "1.0.2",
  "manifest_version": 3,
  "homepage_url": "https://github.com/dimdenGD/cobalt-extension",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "optional_permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "/images/co.png"
  },
  "action": {
    "default_icon": {
      "128": "/images/co.png"
    },
    "default_title": "download media from this page"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}